{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "inlineSourceMap": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
